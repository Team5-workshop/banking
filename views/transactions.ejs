<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bank Transfer</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 50px;
        background-color: #f4f4f4;
      }
      .container {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      h2 {
        text-align: center;
        color: #333;
      }
      .form-group {
        margin-bottom: 15px;
      }
      .form-group label {
        display: block;
        margin-bottom: 5px;
        color: #555;
      }
      .form-group input,
      .form-group select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
      }
      .form-group button {
        width: 100%;
        padding: 10px;
        background-color: #28a745;
        color: #fff;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
      }
      .form-group button:hover {
        background-color: #218838;
      }
      .form-group .radio-group {
        display: flex;
        justify-content: space-around;
        margin-bottom: 15px;
      }
      .form-group .radio-group label {
        display: inline-block;
        color: #555;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2>Bank Transfer</h2>
      <form action="/submit" method="POST" id="transferForm">
        <div class="form-group">
          <label for="transactionType"></label>
          <div class="radio-group">
            <label>
              <input
                type="radio"
                name="transactionType"
                value="입금"
                required
              />
              입금
            </label>
            <label>
              <input type="radio" name="transactionType" value="출금" /> 출금
            </label>
            <label>
              <input type="radio" name="transactionType" value="이체" /> 이체
            </label>
          </div>
        </div>
        <div class="form-group">
          <label for="accountNumber">계좌 번호</label>
          <input
            type="number"
            id="accountNumber"
            name="accountNumber"
            required
          />
        </div>
        <div class="form-group">
          <label for="recipientAccountNumber">받는 사람 계좌 번호</label>
          <input
            type="number"
            id="recipientAccountNumber"
            name="recipientAccountNumber"
            required
          />
        </div>
        <div class="form-group">
          <label for="amount">금액</label>
          <input type="number" id="amount" name="amount" required />
        </div>
        <div class="form-group">
          <label for="transferTime">보내는 시간</label>
          <input type="text" id="transferTime" name="transferTime" readonly />
        </div>
        <div class="form-group">
          <button type="submit">보내기</button>
        </div>
      </form>
    </div>

    <script>
      function getCurrentTime() {
        const now = new Date();
        return now.toLocaleString();
      }

      document
        .getElementById("transferForm")
        .addEventListener("submit", function (e) {
          document.getElementById("transferTime").value = getCurrentTime();
        });

      // 페이지 로드 시 현재 시간을 설정
      document.getElementById("transferTime").value = getCurrentTime();
    </script>
    <script src="/trsns"></script>
  </body>
</html>
